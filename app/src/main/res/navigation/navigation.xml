<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/navigation"
    app:startDestination="@id/dayTaskListFragment">

    <fragment
        android:id="@+id/dayTaskListFragment"
        android:name="com.github.natalyamedvedeva.todoapp.DayTaskListFragment"
        android:label="DayTaskListFragment" >
        <action
            android:id="@+id/action_dayTaskListFragment_to_newTaskFragment"
            app:destination="@id/newTaskFragment" />
        <action android:id="@+id/action_dayTaskListFragment_to_taskFragment" app:destination="@id/taskFragment"/>
    </fragment>
    <fragment
        android:id="@+id/newTaskFragment"
        android:name="com.github.natalyamedvedeva.todoapp.NewTaskFragment"
        android:label="NewTaskFragment" >
        <action
            android:id="@+id/action_newTaskFragment_to_dayTaskListFragment"
            app:destination="@id/dayTaskListFragment" />
        <argument android:name="date" app:argType="java.util.Date"/>
    </fragment>
    <fragment android:id="@+id/taskFragment" android:name="com.github.natalyamedvedeva.todoapp.TaskFragment"
              android:label="TaskFragment">
        <action android:id="@+id/action_taskFragment_to_dayTaskListFragment" app:destination="@id/dayTaskListFragment"/>
        <argument android:name="task" app:argType="com.github.natalyamedvedeva.todoapp.data.Task"/>
    </fragment>
</navigation>